{% extends 'index/index.html.twig' %}
{% block linkStyles %}
    <link href="../styles/index/styles.css" rel="stylesheet">
    <link href="../styles/index/vendor.css" rel="stylesheet">
    <link href="../styles/summary/summary.css" rel="stylesheet">
    <link href="../styles/summary/table.css" rel="stylesheet">
    <link href="../styles/summary/table2.css" rel="stylesheet">

{% endblock %}
{% block body %}
    <form id="create_user" method="post">
        <h1>Добавление токена</h1>
        <div>
            <label><textarea minlength="30" name="token" type="text">{{token??''}}</textarea></label>
        </div>
        <div>
            <label><p style="color: red">{{error??''}}</p></label>
        </div>
        <div><input class="submit" type="submit" value="Добавить"/></div>
    </form>
     <style>
        form textarea {
            background: #c4c4c4;
            text-align: center;
            border: none;
            width: 35vw;
            min-height: 2vh;
            padding: 1vh;
            border-radius: 5px;
            font-size: 2vh;
        }

        .styled-table tbody tr {
            border-bottom: 1px solid #dddddd;
        }

        .styled-table tbody tr:nth-of-type(even) {
            background-color: #f3f3f3;
        }

        .styled-table tbody tr:last-of-type {
            border-bottom: 2px solid #009879;
        }

        .styled-table th,
        .styled-table td {
            padding: 12px 15px;
        }

        .styled-table thead tr {
            background-color: #009879;
            color: #ffffff;
            text-align: left;
        }

        .styled-table {
            border-collapse: collapse;
            margin: 25px 0;
            font-size: 0.9em;
            font-family: sans-serif;
            min-width: 400px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
        }

        #create_user {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-top: 20vh;
            padding-bottom: 20vh;
            background: white;
            border-radius: 5px;
            width: 40vw;
            margin: 0 auto;
        }

        #create_user :only-child {
            margin: 2vh;
        }

        label {
            text-align: center;
            display: flex;
            flex-direction: column;
        }

        p {
            margin-bottom: 5vh;
        }

        .error {
            color: red;
            font-size: 2vh;
            margin: 0;
        }

        form input {
            background: #c4c4c4;
            text-align: center;
            border: none;
            width: 12vw;
            height: 3vh;
            padding: 1vh;
            border-radius: 5px;
            font-size: 2vh;
        }

        .submit {
            margin-top: 5vh;
            width: auto;
            background: #c9c9c9;
            font-size: 3vh;
            height: auto;
            padding: 1vh 3vh;
            border-radius: 5px;
            color: black;
        }

        select {
            text-align: center;
        }
    </style>
{% endblock %}
